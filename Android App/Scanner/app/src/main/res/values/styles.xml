<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Button Styles -->
    <style name="Open3DMap.Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/brand_purple</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="Open3DMap.Button.Secondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/brand_teal</item>
        <item name="android:textColor">@color/brand_teal</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="Open3DMap.Button.Accent" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/brand_orange</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <!-- FloatingActionButton Style -->
    <style name="Open3DMap.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/brand_orange</item>
        <item name="tint">@color/white</item>
        <item name="elevation">8dp</item>
    </style>
    
    <!-- TextInputLayout Style -->
    <style name="Open3DMap.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/brand_purple</item>
        <item name="hintTextColor">@color/brand_purple</item>
    </style>
    
    <!-- Card Style -->
    <style name="Open3DMap.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/surface_light</item>
    </style>
    
    <!-- Text Styles -->
    <style name="Open3DMap.Text.Headline" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/brand_navy</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="Open3DMap.Text.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/brand_navy</item>
    </style>
    
    <style name="Open3DMap.Text.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/grey_medium</item>
    </style>
</resources> 